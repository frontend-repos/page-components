{
  "name": "pages",
  "version": "1.0.0",
  "description": "A toolkit for building modular Html Pages / Templates",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "npm -v & bower -v",
    "preversion": "npm run build",
    "postversion": "git push --tags && npm run git-push",
    "dev": "browser-sync start --config bs-config.js && gulp watch-nunjucks",
    "git-commit": "git add -A . && git commit -a -m 'Release packaged'",
    "git-push": "git push origin develop",
    "build": "WEBPACK_ENV=build webpack --progress --colors",
    "build-html": "rm -r component/ && webpack -p --progress --colors --config html.webpack.config.js",
    "release": "npm run build && npm run git-commit && npm run version:patch",
    "version:patch": "npm version patch && git push --tags",
    "liveview": "browser-sync start --config bs-config.js",
    "updates": "npm update && bower update",
    "nunjucks": "gulp nunjucks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontend-repos/pages.git"
  },
  "keywords": [
    "HTML",
    "Templates"
  ],
  "author": "shawn sandy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frontend-repos/pages/issues"
  },
  "homepage": "https://github.com/frontend-repos/pages#readme",
  "devDependencies": {
    "browser-sync": "^2.10.1",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-file-include": "^0.13.7",
    "gulp-git": "^1.6.0",
    "gulp-newer": "^1.1.0",
    "gulp-notify": "^2.2.0",
    "gulp-nunjucks-render": "^1.0.0",
    "gulp-print": "^2.0.1",
    "gulp-prompt": "^0.1.2",
    "gulp-rename": "^1.2.2",
    "gulp-watch": "^4.3.5",
    "main-bower-files": "^2.11.0",
    "require": "^2.4.20",
    "require-dir": "^0.3.0"
  },
  "dependencies": {
    "rucksack-css": "^0.8.5"
  }
}
